<SCENE>

<!-- Initial values -->
<INITIALS>
    <frustum near="0.1" far="500"/>                 
    <translation x="-1" y="1" z="0" />               
    <rotation axis="x" angle="0" />                
    <rotation axis="y" angle="0" />                
    <rotation axis="z" angle="0" />                
    <scale sx="0.25" sy="0.25" sz="0.25" />         
    <reference length="5" />                        
</INITIALS>


<!-- Illumination and clear colour -->
<ILLUMINATION>
    <ambient r="0.2" g="0.2" b="0.2" a="1" />       
    <background r="0" g="0" b="0" a="1" />          
</ILLUMINATION>

<LIGHTS>

	<LIGHT id="light">                                    
        <enable value ="1" />                   	       
        <position  x="15" y="20" z="10" w="1" />       	   
        <ambient r="0.8" g="0.8" b="0.8" a="1.0" />        	 
        <diffuse r="1.0" g="1.0" b="1.0" a="1.0" />        
        <specular r="1.0" g="1.0" b="1.0" a="1.0" />      
    </LIGHT>

</LIGHTS>

<TEXTURES>

	<!-- Tree trunk -->
    <TEXTURE id="trunk">
        <file path="images/trunk-image.jpg" />               
        <amplif_factor s="2" t="2" />                           
    </TEXTURE>

    <TEXTURE id="woodfloor">
        <file path="images/floor_wood.jpg" />               
        <amplif_factor s="4" t="4" />                           
    </TEXTURE>

    <TEXTURE id="basic">
        <file path="images/basic.png" />               
        <amplif_factor s="4" t="4" />                           
    </TEXTURE>
    
</TEXTURES>


<MATERIALS>

	<MATERIAL id="defaultMaterial">                                  
        <shininess value="1" />
        <specular r="0.0" g="0.0" b="0.0" a="1" />        
        <diffuse r="0.4" g="0.4" b="0.4" a="1" />       
        <ambient r="0.4" g="0.4" b="0.4" a="1" />         
        <emission r="0.0" g="0.0" b="0.0" a="1" />        
    </MATERIAL>

</MATERIALS>

<!-- The leaves -->
<LEAVES>
</LEAVES>


<NODES>
    <ROOT id="root" />    

    <!-- The root node -->
    <NODE id="root">       
        <MATERIAL id="defaultMaterial" />         
        <TEXTURE id="null" />  

        <DESCENDANTS>
        	<NODEREF id="floor" />
        	<NODEREF id="chair" />
        </DESCENDANTS>
    </NODE>

    <NODE id="floor">      
        <MATERIAL id="null" />    
        <TEXTURE id="woodfloor" />

        <SCALE sx="6" sy="1" sz="5" />
        <TRANSLATION x="0" y="0" z="4" />
        <ROTATION axis="x" angle="-90" />

        <DESCENDANTS>
			<LEAF  type="rectangle" args="0 4 5 0" />        
		</DESCENDANTS>
    </NODE>

    <NODE id="chair">
    	<MATERIAL id="null" />
    	<TEXTURE id="null" />

    	<DESCENDANTS>
			<NODEREF id="chairBack" />
        	<NODEREF id="chairBench" />
        	<NODEREF id="chairLeg1" />
        	<NODEREF id="chairLeg2" />
        	<NODEREF id="chairLeg3" />
        	<!--<NODEREF id="chairLeg4" /> -->
		</DESCENDANTS>
	</NODE>

	<NODE id="chairBack">
    	<MATERIAL id="null" />
    	<TEXTURE id="basic" />


    	<TRANSLATION x="12" y="1.7" z="10" />
    	<SCALE sx="0.5" sy="0.5" sz="0.5" />
    	<ROTATION axis="y" angle="-45" />

    	<DESCENDANTS>
			<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>
	</NODE>

	<NODE id="chairBench">
    	<MATERIAL id="null" />
    	<TEXTURE id="basic" />

    	<TRANSLATION x="12" y="1.7" z="10" />
    	<SCALE sx="0.5" sy="0.5" sz="0.5" />
    	<ROTATION axis="y" angle="-45" />
    	<ROTATION axis="x" angle="-90" />

    	<DESCENDANTS>
			<LEAF  type="rectangle" args="0 4 5 0" />        
        </DESCENDANTS>
	</NODE>

	<NODE id="chairLeg1">
    	<MATERIAL id="null" />
    	<TEXTURE id="basic" />

		<TRANSLATION x="12.3" y="0" z="10" />
    	<ROTATION axis="x" angle="-90" />
    	<SCALE sx="0.2" sy="0.2" sz="0.425" />

    	<DESCENDANTS>
			<LEAF id="cylinder1" type="cylinder" args="4 1 1 20 20" />
        </DESCENDANTS>
	</NODE>
    
    <NODE id="chairLeg2">
    	<MATERIAL id="null" />
    	<TEXTURE id="basic" />

		<TRANSLATION x="13.7" y="0" z="11.4" />
    	<ROTATION axis="x" angle="-90" />
    	<SCALE sx="0.2" sy="0.2" sz="0.425" />

    	<DESCENDANTS>
			<LEAF id="cylinder1" type="cylinder" args="4 1 1 20 20" />
        </DESCENDANTS>
	</NODE>

	<NODE id="chairLeg3">
    	<MATERIAL id="null" />
    	<TEXTURE id="basic" />

		<TRANSLATION x="12.3" y="0" z="10" />
    	<ROTATION axis="x" angle="-90" />
    	<SCALE sx="0.2" sy="0.2" sz="0.425" />

    	<DESCENDANTS>
			<LEAF id="cylinder1" type="cylinder" args="4 1 1 20 20" />
        </DESCENDANTS>
	</NODE>





</NODES>

</SCENE>